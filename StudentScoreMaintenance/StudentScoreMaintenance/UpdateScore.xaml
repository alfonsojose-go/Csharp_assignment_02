<Window x:Class="StudentScoreMaintenance.UpdateScore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScoreMaintenance"
        mc:Ignorable="d"
        Title="Update Score" Height="103" Width="230">
    <Grid Margin="0,0,0,3">
        <Label Content="Score:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtScore" HorizontalAlignment="Left" Margin="57,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TabIndex="1"/>
        <Button x:Name="btnUpdate" Content="_Update" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="64" Click="btnUpdate_Click" TabIndex="2"/>
        <Button x:Name="btnCancel" Content="_Cancel" HorizontalAlignment="Left" Margin="113,41,0,0" VerticalAlignment="Top" Width="64" Click="btnCancel_Click" TabIndex="3"/>
    </Grid>
</Window>
