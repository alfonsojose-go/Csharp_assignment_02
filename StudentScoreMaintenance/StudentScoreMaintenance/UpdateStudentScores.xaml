<Window x:Class="StudentScoreMaintenance.UpdateStudentScores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScoreMaintenance"
        mc:Ignorable="d"
        Title="Update Student Scores" Height="247" Width="398">
    <Grid Margin="0,0,0,-6">
        <Label Content="Name:" HorizontalAlignment="Left" Margin="13,14,0,0" VerticalAlignment="Top"/>
        <Label Content="Scores:" HorizontalAlignment="Left" Margin="13,45,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.406,-1.598"/>
        <ListBox x:Name="lstScores" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" Margin="70,54,0,0" VerticalAlignment="Top" Height="95" Width="164"/>
        <Button x:Name="btnAdd" Content="_Add" HorizontalAlignment="Left" Margin="239,54,0,0" VerticalAlignment="Top" Width="72" Click="btnAdd_Click" TabIndex="1"/>
        <Button x:Name="btnUpdate" Content="_Update" HorizontalAlignment="Left" Margin="239,79,0,0" VerticalAlignment="Top" Width="72" Click="btnUpdate_Click" TabIndex="2"/>
        <Button x:Name="btnRemove" Content="_Remove" HorizontalAlignment="Left" Margin="239,104,0,0" VerticalAlignment="Top" Width="72" Click="btnRemove_Click" TabIndex="3"/>
        <Button Content="Clear _Scores" HorizontalAlignment="Left" Margin="239,129,0,0" VerticalAlignment="Top" Width="64"/>
        <Button Content="Clear _Scores" HorizontalAlignment="Left" Margin="239,129,0,0" VerticalAlignment="Top" Width="72" Click="Button_Click" TabIndex="4"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="70,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Button x:Name="btnClose" Content="_Close" HorizontalAlignment="Left" Margin="239,179,0,0" VerticalAlignment="Top" Width="64" Click="btnClose_Click" TabIndex="6"/>
        <Button x:Name="btnOK" Content="_OK" HorizontalAlignment="Left" Margin="170,179,0,0" VerticalAlignment="Top" Width="64" Click="btnOK_Click" TabIndex="5"/>

    </Grid>
</Window>
