<Window x:Class="StudentScoreMaintenance.UpdateStudentScores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScoreMaintenance"
        mc:Ignorable="d"
        Title="UpdateStudentScores" Height="236" Width="327">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="13,14,0,0" VerticalAlignment="Top"/>
        <Label Content="Scores:" HorizontalAlignment="Left" Margin="13,45,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.406,-1.598"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" Margin="70,54,0,0" VerticalAlignment="Top" Height="95" Width="164"/>
        <Button Content="_Add" HorizontalAlignment="Left" Margin="239,54,0,0" VerticalAlignment="Top" Width="64"/>
        <Button Content="_Update" HorizontalAlignment="Left" Margin="239,79,0,0" VerticalAlignment="Top" Width="64"/>
        <Button Content="_Remove" HorizontalAlignment="Left" Margin="239,104,0,0" VerticalAlignment="Top" Width="64"/>
        <Button Content="Clear _Scores" HorizontalAlignment="Left" Margin="239,129,0,0" VerticalAlignment="Top" Width="64"/>
        <Button Content="Clear _Scores" HorizontalAlignment="Left" Margin="239,129,0,0" VerticalAlignment="Top" Width="64"/>
        <TextBox HorizontalAlignment="Left" Margin="70,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="_Close" HorizontalAlignment="Left" Margin="239,179,0,0" VerticalAlignment="Top" Width="64"/>
        <Button Content="_OK" HorizontalAlignment="Left" Margin="170,179,0,0" VerticalAlignment="Top" Width="64"/>

    </Grid>
</Window>
