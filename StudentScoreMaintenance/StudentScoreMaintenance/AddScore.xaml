<Window x:Class="StudentScoreMaintenance.AddScore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScoreMaintenance"
        mc:Ignorable="d"
        Title="AddScore" Height="99" Width="189">
    <Grid Margin="0,0,0,-6">
        <Label Content="Score:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="57,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="_Add" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="64"/>
        <Button Content="_Cancel" HorizontalAlignment="Left" Margin="113,41,0,0" VerticalAlignment="Top" Width="64"/>

    </Grid>
</Window>
